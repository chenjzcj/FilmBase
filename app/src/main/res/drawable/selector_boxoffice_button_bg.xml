<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@android:color/holo_blue_bright"/>
            <corners android:radius="30dp"/>
            <gradient android:angle="270.0" android:endColor="@android:color/holo_blue_bright" android:startColor="@android:color/holo_blue_bright"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@color/black"/>
            <corners android:radius="30dp"/>
            <gradient android:angle="270.0" android:endColor="@color/black" android:startColor="@color/black"/>

        </shape>
    </item>

</selector>
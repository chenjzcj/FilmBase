<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@android:color/holo_red_dark"/>
            <corners android:radius="30dp"/>
            <gradient android:angle="270.0" android:endColor="@android:color/holo_red_dark" android:startColor="@android:color/holo_red_dark"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@android:color/holo_red_light"/>
            <corners android:radius="30dp"/>
            <gradient android:angle="270.0" android:endColor="@android:color/holo_red_light" android:startColor="@android:color/holo_red_light"/>

        </shape>
    </item>

</selector>
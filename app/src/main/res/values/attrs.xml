<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundedImageView">
        <attr name="corner_radius" format="dimension"/>
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
        <attr name="mutate_background" format="boolean"/>
        <!-- 背景是否变化 -->
        <attr name="oval" format="boolean"/>
        <!-- 是否为圆形 -->
        <attr name="android:scaleType"/>
    </declare-styleable>

    <declare-styleable name="TabOneViewStylealbe">
        <attr name="tab_src_checked" format="reference"/>
        <attr name="tab_src_unchecked" format="reference"/>
        <attr name="tab_text" format="string"/>
        <attr name="tab_text_color_checked" format="color"/>
        <attr name="tab_text_color_unchecked" format="color"/>
    </declare-styleable>
    <declare-styleable name="ToggleButton">
        <attr name="borderWidth" format="dimension"/>
        <attr name="offBorderColor" format="reference|color"/>
        <attr name="offColor" format="reference|color"/>
        <attr name="onColor" format="reference|color"/>
        <attr name="spotColor" format="reference|color"/>
    </declare-styleable>
    <declare-styleable name="AbsSpinner">
        <attr name="entries" format="string"/>
    </declare-styleable>
    <attr name="galleryStyle" format="reference"/>
    <declare-styleable name="Gallery">
        <attr name="gravity" format="integer"/>
        <!--
             Sets how long a transition animation should run (in milliseconds)
             when layout has changed.  Only relevant if animation is turned on.
        -->
        <attr name="animationDuration" format="integer" min="0"/>
        <attr name="spacing" format="dimension"/>
        <!-- Sets the alpha on the items that are not selected. -->
        <attr name="unselectedAlpha" format="float"/>
    </declare-styleable>

    <declare-styleable name="mToolbarStylealbe">
        <attr name="btn_src" format="reference"/>
        <attr name="btn_text" format="string"/>
        <attr name="btn_textSize" format="dimension"/>
        <attr name="btn_textColor" format="color"/>
        <attr name="text_padding_top" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="settingItemViewStylealbe">
        <attr name="item_title" format="string"/>
        <attr name="title_size" format="dimension"/>
        <attr name="title_color" format="color"/>
        <attr name="summary" format="string"/>
        <attr name="summary_size" format="dimension"/>
        <attr name="summary_color" format="color"/>
        <attr name="content" format="string"/>
        <attr name="content_size" format="dimension"/>
        <attr name="content_color" format="color"/>
        <attr name="title_icon" format="reference"/>
        <attr name="arrow_src" format="reference"/>
        <attr name="switch_src" format="reference"/>
    </declare-styleable>

    <declare-styleable name="LoadingImageView">
        <attr name="anim_auto_start" format="boolean" />
        <attr name="mask_color" format="color" />
    </declare-styleable>

    <declare-styleable name="MoreTextStyle">
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="maxLine" format="integer" />
        <attr name="text" format="string" />
    </declare-styleable>
</resources>